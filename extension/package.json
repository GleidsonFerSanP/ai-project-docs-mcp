{
    "name": "ai-project-context",
    "displayName": "AI Project Context",
    "description": "Intelligent context management for AI assistants - Session focus tracking, contracts, guidelines, and project memory",
    "version": "1.5.0",
    "publisher": "GleidsonFerSanP",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "AI",
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "mcp",
        "model context protocol",
        "documentation",
        "ai assistant",
        "copilot",
        "knowledge base",
        "architecture",
        "contracts"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "ai-project-context",
                "label": "AI Project Context"
            }
        ],
        "commands": [
            {
                "command": "ai-project-context.configure",
                "title": "Configure AI Project Context",
                "category": "AI Project Context"
            },
            {
                "command": "ai-project-context.restart",
                "title": "Restart MCP Server",
                "category": "AI Project Context"
            },
            {
                "command": "ai-project-context.viewDocs",
                "title": "Open Documentation",
                "category": "AI Project Context"
            }
        ],
        "chatInstructions": [
            {
                "name": "ProjectDocsMCPGuidelines",
                "description": "Project documentation, architecture decisions, contracts, patterns, and features management guidelines",
                "path": "resources/instructions/project-docs.instructions.md"
            },
            {
                "name": "GitHubCopilotProjectContextIntegration",
                "description": "**CRITICAL**: Read this file at the START of EVERY conversation with GitHub Copilot. This file provides essential instructions for maintaining project context and conversational focus using the Project Docs MCP. **MUST** be loaded FIRST before any coding work to ensure proper context awareness and focus maintenance.",
                "path": "resources/instructions/github-copilot.instructions.md"
            }
        ],
        "configuration": {
            "title": "AI Project Context",
            "properties": {
                "aiProjectContext.autoStart": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start MCP server on VS Code startup"
                },
                "aiProjectContext.logLevel": {
                    "type": "string",
                    "enum": [
                        "error",
                        "warn",
                        "info",
                        "debug"
                    ],
                    "default": "info",
                    "description": "Log level for MCP server"
                },
                "aiProjectContext.defaultProject": {
                    "type": "string",
                    "default": "default",
                    "description": "Default project to use when none is detected"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.22.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/GleidsonFerSanP/ai-project-docs-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/GleidsonFerSanP/ai-project-docs-mcp/issues"
    },
    "license": "MIT"
}